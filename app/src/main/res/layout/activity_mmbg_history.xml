<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.terapanth.app.activities.MmbgHistoryActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginBottom="-3dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">


        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

                <com.terapanth.app.Utills.CustomTextView
                    android:id="@+id/tv_mmbghistory_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@drawable/detail_background"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/text_header_dark"
                    android:textSize="@dimen/_16sdp"
                    app:typeface="pb.ttf" />

                <com.terapanth.app.Utills.CustomTextView
                    android:id="@+id/tv_mmbghistory_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center_vertical|left"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/text_header_dark"
                    android:textSize="@dimen/_14sdp"
                    app:typeface="pr.ttf" />

            </LinearLayout>


        </android.support.v4.widget.NestedScrollView>


    </android.support.v7.widget.CardView>

</LinearLayout>
